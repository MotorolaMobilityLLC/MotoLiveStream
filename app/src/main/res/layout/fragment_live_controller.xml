<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:id="@+id/layout_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/top_layout_margin"
        android:paddingStart="@dimen/live_layout_margin"
        android:paddingEnd="@dimen/top_layout_margin"
        android:visibility="gone">

        <com.motorola.livestream.ui.widget.LiveCountingTimer
            android:id="@+id/live_timer_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:paddingTop="10dp" />

        <ImageButton
            android:id="@+id/btn_record_mute"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:layout_alignParentEnd="true"
            android:src="@drawable/live_mute"
            android:drawablePadding="@dimen/live_layout_margin_vertical"
            android:background="@drawable/btn_bg"/>

    </RelativeLayout>

    <include
        android:id="@+id/layout_go_live"
        layout="@layout/layout_go_live" />

    <RelativeLayout
        android:id="@+id/layout_live_interact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/layout_go_live"
        android:paddingStart="@dimen/live_layout_interact_margin_horizontal"
        android:paddingEnd="@dimen/live_layout_interact_margin_horizontal"
        android:paddingTop="@dimen/live_layout_interact_margin_top"
        android:paddingBottom="@dimen/live_layout_interact_margin_bottom"
        android:background="#66000000"
        android:visibility="gone">

        <TextView
            android:id="@+id/live_comments_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:drawableStart="@drawable/ic_live_comments"
            android:drawablePadding="@dimen/text_icon_padding"
            android:textSize="@dimen/text_size_x_small"
            style="@style/TextAppearance.AppCompat.Small.Inverse"/>

        <TextView
            android:id="@+id/live_views_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/live_comments_view"
            android:paddingStart="18dp"
            android:drawablePadding="@dimen/text_icon_padding"
            android:drawableStart="@drawable/ic_live_views"
            android:textSize="@dimen/text_size_x_small"
            style="@style/TextAppearance.AppCompat.Small.Inverse"/>

        <!--Button
            android:id="@+id/btn_post_comment"
            android:layout_width="@dimen/live_pure_icon_scale"
            android:layout_height="@dimen/live_pure_icon_scale"
            android:layout_alignParentEnd="true"
            android:background="@drawable/ic_post_comment"
            style="@style/TextAppearance.AppCompat.Widget.Button.Inverse" /-->
    </RelativeLayout>

    <include
        android:id="@+id/layout_live_comments"
        layout="@layout/live_comment_list"
        android:layout_width="match_parent"
        android:layout_height="@dimen/live_layout_comment_height"
        android:layout_above="@id/layout_live_interact" />

    <RelativeLayout
        android:id="@+id/layout_live_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/layout_live_interact"
        android:paddingStart="@dimen/live_layout_settings_margin_horizontal"
        android:paddingEnd="@dimen/live_layout_settings_margin_horizontal"
        android:background="@android:color/transparent">

        <LinearLayout
            android:id="@+id/layout_user_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:focusable="true"
            android:focusableInTouchMode="true">
            <ImageView
                android:id="@+id/user_avatar"
                android:layout_width="@dimen/live_user_avatar_size"
                android:layout_height="@dimen/live_user_avatar_size"
                android:scaleType="centerInside" />
            <TextView
                android:id="@+id/user_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/live_layout_settings_child_margin_horizontal"
                android:textSize="@dimen/text_size_medium"
                android:textColor="@android:color/white" />
            <ImageView
                android:id="@+id/user_chevron"
                android:layout_width="@dimen/live_user_avatar_size"
                android:layout_height="@dimen/live_user_avatar_size"
                android:src="@drawable/item_row_chevron_white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_privacy_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/layout_user_info"
            android:layout_marginTop="@dimen/live_layout_settings_child_margin_vertical">

            <ImageView
                android:id="@+id/privacy_icon"
                android:layout_width="@dimen/live_user_avatar_size"
                android:layout_height="@dimen/live_user_avatar_size"
                android:scaleType="centerInside" />
            <TextView
                android:id="@+id/privacy_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/live_layout_settings_child_margin_horizontal"
                android:textSize="@dimen/text_size_medium"
                android:textColor="@android:color/white" />
            <ImageView
                android:layout_width="@dimen/live_user_avatar_size"
                android:layout_height="@dimen/live_user_avatar_size"
                android:src="@drawable/item_row_chevron_white" />
        </LinearLayout>

        <android.support.design.widget.TextInputLayout
            xmlns:android.support.design="http://schemas.android.com/apk/res-auto"
            android:theme="@style/TextInputLayoutTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_privacy_setting"
            android:layout_marginTop="@dimen/live_layout_input_margin_vertical"
            android:layout_marginBottom="@dimen/live_layout_input_margin_vertical"
            android.support.design:hintTextAppearance="@style/HintTextAppearance">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/live_description_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/live_description_hint"
                android:textSize="@dimen/text_size_medium"
                android:textColor="@android:color/white"
                android:textCursorDrawable="@drawable/edittext_cursor"/>
        </android.support.design.widget.TextInputLayout>

    </RelativeLayout>
</RelativeLayout>