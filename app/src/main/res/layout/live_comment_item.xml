<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/live_comment_item_height"
    android:paddingStart="24dp"
    android:paddingBottom="10dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/viewer_img"
        android:layout_width="@dimen/live_user_avatar_size_big"
        android:layout_height="@dimen/live_user_avatar_size_big"
        android:scaleType="centerInside" />

    <RelativeLayout
        android:id="@+id/layout_viewer_details"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_marginStart="8dp">
        <TextView
            android:id="@+id/viewer_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            style="@style/CommentTextAppearance"/>

        <TextView
            android:id="@+id/viewer_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/viewer_name"
            style="@style/CommentTextAppearance"/>
    </RelativeLayout>

</LinearLayout>