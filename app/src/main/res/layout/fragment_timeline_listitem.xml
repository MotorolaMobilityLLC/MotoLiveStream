<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/timeline_item_margin_start"
    android:paddingEnd="@dimen/timeline_item_margin_end"
    android:background="?android:attr/selectableItemBackground">

    <ToggleButton
        android:id="@+id/checkbox_is_picked"
        android:layout_width="@dimen/timeline_fig_checkbox_size"
        android:layout_height="@dimen/timeline_fig_checkbox_size"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="@drawable/checkmark_blue"
        android:clickable="false"
        android:focusable="false"
        android:text="@null"
        android:textOff="@null"
        android:textOn="@null" />

    <ImageView
        android:id="@+id/item_privacy_icon"
        android:layout_width="@dimen/timeline_fig_raw_image_size"
        android:layout_height="@dimen/timeline_fig_raw_image_size"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/checkbox_is_picked"
        android:layout_marginStart="@dimen/timeline_fig_raw_image_margin"
        android:layout_marginEnd="@dimen/timeline_fig_raw_image_margin"
        android:scaleType="centerCrop" />

    <RelativeLayout
        android:id="@+id/item_text_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/item_privacy_icon"
        android:layout_alignParentEnd="true"
        android:paddingTop="@dimen/timeline_item_margin_vertical"
        android:paddingBottom="@dimen/timeline_item_margin_vertical">

        <TextView
            android:id="@+id/timeline_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/item_title_color"
            android:textSize="@dimen/text_size_medium" />

        <TextView
            android:id="@+id/timeline_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/timeline_title"
            android:layout_marginTop="@dimen/timeline_fig_text_margin_vertical"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/item_summary_color"
            android:textSize="@dimen/text_size_small"/>
    </RelativeLayout>

    <View
        android:id="@+id/divider_fig"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/item_divider"
        android:layout_alignParentBottom="true" />

</RelativeLayout>